<style>
.search-container {
  max-width: 1200px;
  margin: 30px auto;
  padding: 20px;
  background: #ecf0f1;
  border-radius: 5px;
}

.search-input {
  width: 100%;
  padding: 12px;
  border: 1px solid var(--border);
  border-radius: 5px;
  font-size: 0.875rem;
}

.filter-buttons {
  display: flex;
  gap: 10px;
  margin-top: 15px;
  flex-wrap: wrap;
}

.filter-buttons .btn {
  padding: 8px 15px;
  font-size: 0.75rem;
}

.section-title-small {
  font-size: 1.25rem;
  margin-top: 0;
}

.colored-headers-cards {
  display: grid;
  grid-template-columns: repeat(3, minmax(220px, 1fr));
  max-width: 1200px;
  margin: 0 auto;
  gap: var(--card-gap);
}

.cards-grid.study-cards .card {
  border: none;
  border-radius: 20px 20px 0 0;
  border-bottom: var(--borderB) 1px solid;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.cards-grid.study-cards .card:hover {
  transform: translateY(-5px);
  box-shadow: 0 5px 8px rgba(210, 187, 113, 0.4);
  border-color: var(--accent);
}

.card-header-rounded {
  border-radius: 20px 20px 0 0;
}

.card-header-blue {
  background: #3498db;
}

.card-header-red {
  background: #e74c3c;
}

.card-header-orange {
  background: #f39c12;
}

.card-header-green {
  background: #27ae60;
}

.card-header-purple {
  background: #9b59b6;
}

.card-header-teal {
  background: #16a085;
}

/* StudyPage specific overrides */
.cards-grid .card-content h3 {
  font-size: 0.875rem;
}

.cards-grid .card-content p {
  font-size: 0.75rem;
  color: var(--text-light);
  margin: 10px 0;
}

.subscribe-form {

  display: flex;
  gap: 10px;
  margin-top: 15px;
}

.subscribe-input {
  flex: 1;
  padding: 10px;
  border: 1px solid var(--border);
  border-radius: 5px;
}

/* ============ RESPONSIVE ============ */
@media (max-width: 768px) {
  .colored-headers-cards {
    grid-template-columns: 1fr;
    gap: 2rem;
  }
}
</style>
