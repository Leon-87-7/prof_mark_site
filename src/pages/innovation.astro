---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getPathPrefix, useTranslations } from '@/i18n/utils';

const lang = 'he';
const t = useTranslations(lang);
const langPrefix = getPathPrefix(lang);
---

<BaseLayout
  title={t('innovation.title')}
  description={t('innovation.subtitle')}
>
  <div class="page active colored-top-border">
    <div class="section">
      <h2 class="section-title">{t('innovation.title')}</h2>
      <p class="section-subtitle">
        {t('innovation.subtitle')}
      </p>
    </div>

    <div class="cards-grid">
      <div class="card">
        <div class="card-header">{t('innovation.cards.techniques.emoji')}</div>
        <div class="card-content">
          <h3>{t('innovation.cards.techniques.title')}</h3>
          <p>
            {t('innovation.cards.techniques.description')}
          </p>
          <button
            class="card-link"
            onclick="alert('Innovation: Advanced surgical techniques with 99%+ success rate')"
          >
            {t('innovation.cards.techniques.cta')}
          </button>
        </div>
      </div>

      <div class="card">
        <div class="card-header">{t('innovation.cards.research.emoji')}</div>
        <div class="card-content">
          <h3>{t('innovation.cards.research.title')}</h3>
          <p>
            {t('innovation.cards.research.description')}
          </p>
          <button
            class="card-link"
            onclick="alert('40+ publications in leading journals including Journal of Orthopedic Surgery, Limb Lengthening & Reconstruction')"
          >
            {t('innovation.cards.research.cta')}
          </button>
        </div>
      </div>

      <div class="card">
        <div class="card-header">{t('innovation.cards.mentorship.emoji')}</div>
        <div class="card-content">
          <h3>{t('innovation.cards.mentorship.title')}</h3>
          <p>
            {t('innovation.cards.mentorship.description')}
          </p>
          <button
            class="card-link"
            onclick="alert('Mentorship: 50+ surgeons trained, annual fellowship program, surgical workshops 2x yearly')"
          >
            {t('innovation.cards.mentorship.cta')}
          </button>
        </div>
      </div>

      <div class="card">
        <div class="card-header">{t('innovation.cards.collaboration.emoji')}</div>
        <div class="card-content">
          <h3>{t('innovation.cards.collaboration.title')}</h3>
          <p>
            {t('innovation.cards.collaboration.description')}
          </p>
          <button
            class="card-link"
            onclick="alert('Collaborations with top centers in Canada, USA, Europe, Egypt, and Asia')"
          >
            {t('innovation.cards.collaboration.cta')}
          </button>
        </div>
      </div>
    </div>

    <div class="feature-box-rtl">
      <h3>ðŸ”¬ {t('innovation.key_innovations.title')}</h3>
      <div class="two-column">
        <div class="column">
          <h4>{t('innovation.key_innovations.techniques.title')}</h4>
          <ul>
            <li>{t('innovation.key_innovations.techniques.items.screw')}</li>
            <li>{t('innovation.key_innovations.techniques.items.healing')}</li>
            <li>{t('innovation.key_innovations.techniques.items.minimally')}</li>
            <li>{t('innovation.key_innovations.techniques.items.computer')}</li>
          </ul>
        </div>
        <div class="column">
          <h4>{t('innovation.key_innovations.research_focus.title')}</h4>
          <ul>
            <li>{t('innovation.key_innovations.research_focus.items.osteogenesis')}</li>
            <li>{t('innovation.key_innovations.research_focus.items.prevention')}</li>
            <li>{t('innovation.key_innovations.research_focus.items.heparan')}</li>
            <li>{t('innovation.key_innovations.research_focus.items.outcomes')}</li>
          </ul>
          </ul>
        </div>
      </div>
    </div>

    <div class="section recent-publications">
      <h2 class="section-title">{t('innovation.publications.title')}</h2>
      <div class="cards-grid">
        <div class="card">
          <div class="card-content">
            <h3>{t('innovation.publications.publication_1.title')}</h3>
            <p>
              <em>{t('innovation.publications.publication_1.journal')}</em>
            </p>
            <p style="max-width: 30ch;">
              {t('innovation.publications.publication_1.description')}
            </p>
            <button class="card-link" onclick="alert('Article link coming soon')">{t('innovation.publications.publication_1.cta')}</button>
          </div>
        </div>
        <div class="card">
          <div class="card-content">
            <h3>{t('innovation.publications.publication_2.title')}</h3>
            <p>
              <em>{t('innovation.publications.publication_2.journal')}</em>
            </p>
            <p style="max-width: 30ch;">
              {t('innovation.publications.publication_2.description')}
            </p>
            <button class="card-link" onclick="alert('Article link coming soon')">{t('innovation.publications.publication_2.cta')}</button>
          </div>
        </div>
        <div class="card">
          <div class="card-content">
            <h3>{t('innovation.publications.publication_3.title')}</h3>
            <p>
              <em>{t('innovation.publications.publication_3.journal')}</em>
            </p>
            <p style="max-width: 30ch;">
              {t('innovation.publications.publication_3.description')}
            </p>
            <button class="card-link" onclick="alert('Article link coming soon')">{t('innovation.publications.publication_3.cta')}</button>
          </div>
        </div>
        
      </div>
    </div>
  </div>
</BaseLayout>

<style>
.recent-publications {
  max-width: 1200px;
  margin: 0 auto 40px auto;
  padding: 0 20px;
}

/* InnovationPage specific overrides */
.cards-grid .card-content h3 {
  font-size: 0.75rem;
}

.cards-grid .card-content p {
  font-size: 0.65rem;
  color: var(--text-light);
  margin: 8px 0;
}
</style>
