---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getPathPrefix, useTranslations } from '@/i18n/utils';

const lang = 'he';
const t = useTranslations(lang);
const langPrefix = getPathPrefix(lang);

---

<BaseLayout
  title={t('services.title')}
  description={t('services.subtitle')}
>
  <div class="page active colored-top-border">
    <div class="section">
      <h2 class="section-title">{t('services.title')}</h2>
      <p class="section-subtitle">
        {t('services.subtitle')}
      </p>
    </div>

    <div class="cards-grid">
      <div class="card">
        <div class="card-header">{t('services.cards.cosmetic_lengthening.emoji')}</div>
        <div class="card-content">
          <h3>{t('services.cards.cosmetic_lengthening.title')}</h3>
          <p>
            {t('services.cards.cosmetic_lengthening.description')}
          </p>
          <button
            class="card-link"
            onclick={`alert(${JSON.stringify(t('footer.comingSoon'))})`}
          >
            {t('services.cards.cosmetic_lengthening.cta')}
          </button>
        </div>
      </div>

      <div class="card">
        <div class="card-header">{t('services.cards.limb_discrepancy.emoji')}</div>
        <div class="card-content">
          <h3>{t('services.cards.limb_discrepancy.title')}</h3>
          <p>
            {t('services.cards.limb_discrepancy.description')}
          </p>
          <button
            class="card-link"
            onclick={`alert(${JSON.stringify(t('footer.comingSoon'))})`}
          >
            {t('services.cards.limb_discrepancy.cta')}
          </button>
        </div>
      </div>

      <div class="card">
        <div class="card-header">{t('services.cards.deformity.emoji')}</div>
        <div class="card-content">
          <h3>{t('services.cards.deformity.title')}</h3>
          <p>
            {t('services.cards.deformity.description')}
          </p>
          <button
            class="card-link"
            onclick={`alert(${JSON.stringify(t('footer.comingSoon'))})`}
          >
            {t('services.cards.deformity.cta')}
          </button>
        </div>
      </div>

      <div class="card">
        <div class="card-header">{t('services.cards.pediatric.emoji')}</div>
        <div class="card-content">
          <h3>{t('services.cards.pediatric.title')}</h3>
          <p>
            {t('services.cards.pediatric.description')}
          </p>
          <button
            class="card-link"
            onclick={`alert(${JSON.stringify(t('footer.comingSoon'))})`}
          >
            {t('services.cards.pediatric.cta')}
          </button>
        </div>
      </div>
    </div>

    <div
      class="feature-box-rtl"
      style="padding-right: 3rem;"
    >
      <h3>{t('services.featured.title')}</h3>
      <div class="two-column">
        <div class="column">
          <h4>{t('services.featured.what.title')}</h4>
          <p style="max-width: 45ch">
            {t('services.featured.what.description')}
          </p>
          <h4 style="margin-top: 5rem">{t('services.featured.who.title')}</h4>
          <ul>
            <li>{t('services.featured.who.items.adults')}</li>
            <li>{t('services.featured.who.items.gain')}</li>
            <li>{t('services.featured.who.items.bone')}</li>
            <li>{t('services.featured.who.items.expectations')}</li>
          </ul>
        </div>
        <div class="column">
          <h4>{t('services.featured.outcomes.title')}</h4>
          <ul>
            <li>{t('services.featured.outcomes.items.gain')}</li>
            <li>{t('services.featured.outcomes.items.appearance')}</li>
            <li>{t('services.featured.outcomes.items.confidence')}</li>
            <li>{t('services.featured.outcomes.items.scarring')}</li>
            <li>{t('services.featured.outcomes.items.complications')}</li>
          </ul>
          <h4>{t('services.featured.timeline.title')}</h4>
          <ul>
            <li>{t('services.featured.timeline.items.surgery')}</li>
            <li>{t('services.featured.timeline.items.lengthening')}</li>
            <li>{t('services.featured.timeline.items.consolidation')}</li>
            <li>{t('services.featured.timeline.items.total')}</li>
          </ul>
        </div>
      </div>
      <a href={`${langPrefix}/clinics`} class="btn btn-primary">{t('services.featured.cta')}</a>
    </div>
  </div>
</BaseLayout>

<style>
/* Scoped to Services and innovation pages only - use a parent class wrapper */
.colored-top-border .cards-grid .card {
  border-top: 3px solid transparent;
}

.colored-top-border .cards-grid .card:nth-child(odd) {
  border-top-color: var(--tab-link-light);
}

.colored-top-border .cards-grid .card:nth-child(odd) .card-header {
  color: var(--tab-link-light);
}

.colored-top-border .cards-grid .card:nth-child(even) {
  border-top-color: var(--tertiary);
}

.colored-top-border .cards-grid .card:nth-child(even) .card-header {
  color: var(--tertiary);
}


</style>
