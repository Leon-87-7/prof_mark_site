---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { useTranslations } from '@/i18n/utils';

const lang = 'ru';
const t = useTranslations(lang);
---

<BaseLayout
  title={t('study.title')}
  description={t('study.subtitle')}
  image="images/study_image_mark.jpg"
  >
  <div class="page active">
    <div class="section">
      <h2 class="section-title">{t('study.title')}</h2>
      <p class="section-subtitle">
        {t('study.subtitle')}
      </p>
    </div>

    <div class="search-container">
      <input
        type="text"
        placeholder={t('study.search.placeholder')}
        class="search-input"
      />
      <div class="filter-buttons">
        <button class="btn btn-secondary">{t('study.search.filters.all')}</button>
        <button class="btn btn-secondary">{t('study.search.filters.articles')}</button>
        <button class="btn btn-secondary">{t('study.search.filters.case_studies')}</button>
        <button class="btn btn-secondary">{t('study.search.filters.lectures')}</button>
        <button class="btn btn-secondary">{t('study.search.filters.research')}</button>
      </div>
    </div>

    <div class="cards-grid colored-headers-cards study-cards">
      <div class="card">
        <div class="card-header card-header-rounded card-header-blue">
          {t('study.content.article_1.emoji')}
        </div>
        <div class="card-content">
          <h3>{t('study.content.article_1.title')}</h3>
          <p>
            <strong>{t('study.content.article_1.type')}</strong> • {t('study.content.article_1.date')}
          </p>
          <p>
            {t('study.content.article_1.description')}
          </p>
          <button
            class="card-link"
            onclick={`alert('${t('footer.comingSoon')}')`}
          >
            {t('study.content.article_1.cta')}
          </button>
        </div>
      </div>

      <div class="card">
        <div class="card-header card-header-rounded card-header-red">
          {t('study.content.case_study_1.emoji')}
        </div>
        <div class="card-content">
          <h3>{t('study.content.case_study_1.title')}</h3>
          <p>
            <strong>{t('study.content.case_study_1.type')}</strong> • {t('study.content.case_study_1.date')}
          </p>
          <p>
            {t('study.content.case_study_1.description')}
          </p>
          <button
            class="card-link"
            onclick={`alert('${t('footer.comingSoon')}')`}
          >
            {t('study.content.case_study_1.cta')}
          </button>
        </div>
      </div>

      <div class="card">
        <div class="card-header card-header-rounded card-header-orange">
          {t('study.content.lecture_1.emoji')}
        </div>
        <div class="card-content">
          <h3>{t('study.content.lecture_1.title')}</h3>
          <p>
            <strong>{t('study.content.lecture_1.type')}</strong> • {t('study.content.lecture_1.duration')} • {t('study.content.lecture_1.date')}
          </p>
          <p>
            {t('study.content.lecture_1.description')}
          </p>
          <button
            class="card-link"
            onclick={`alert('${t('footer.comingSoon')}')`}
          >
            {t('study.content.lecture_1.cta')}
          </button>
        </div>
      </div>

      <div class="card">
        <div class="card-header card-header-rounded card-header-green">
          {t('study.content.research_1.emoji')}
        </div>
        <div class="card-content">
          <h3>{t('study.content.research_1.title')}</h3>
          <p>
            <strong>{t('study.content.research_1.type')}</strong> • {t('study.content.research_1.date')}
          </p>
          <p>
            {t('study.content.research_1.description')}
          </p>
          <button
            class="card-link"
            onclick={`alert('${t('footer.comingSoon')}')`}
          >
            {t('study.content.research_1.cta')}
          </button>
        </div>
      </div>

      <div class="card">
        <div class="card-header card-header-rounded card-header-purple">
          {t('study.content.article_2.emoji')}
        </div>
        <div class="card-content">
          <h3>{t('study.content.article_2.title')}</h3>
          <p>
            <strong>{t('study.content.article_2.type')}</strong> • {t('study.content.article_2.date')}
          </p>
          <p>
            {t('study.content.article_2.description')}
          </p>
          <button
            class="card-link"
            onclick={`alert('${t('footer.comingSoon')}')`}
          >
            {t('study.content.article_2.cta')}
          </button>
        </div>
      </div>

      <div class="card">
        <div class="card-header card-header-rounded card-header-teal">
          {t('study.content.case_study_2.emoji')}
        </div>
        <div class="card-content">
          <h3>{t('study.content.case_study_2.title')}</h3>
          <p>
            <strong>{t('study.content.case_study_2.type')}</strong> • {t('study.content.case_study_2.date')}
          </p>
          <p>
            {t('study.content.case_study_2.description')}
          </p>
          <button
            class="card-link"
            onclick={`alert('${t('footer.comingSoon')}')`}
          >
            {t('study.content.case_study_2.cta')}
          </button>
        </div>
      </div>
    </div>

    <div class="feature-box">
      <h3>{t('study.subscribe.title')}</h3>
      <p>
        {t('study.subscribe.description')}
      </p>
      <div class="subscribe-form">
        <input
          type="email"
          placeholder={t('study.subscribe.placeholder')}
          class="subscribe-input"
        />
        <button
          class="btn btn-primary"
          onclick={`alert('${t('footer.comingSoon')}')`}
        >
          {t('study.subscribe.cta')}
        </button>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
.search-container {
  max-width: 1200px;
  margin: 30px auto;
  padding: 20px;
  background: #ecf0f1;
  border-radius: 5px;
}

.search-input {
  width: 100%;
  padding: 12px;
  border: 1px solid var(--border);
  border-radius: 5px;
  font-size: 0.875rem;
}

.filter-buttons {
  display: flex;
  gap: 10px;
  margin-top: 15px;
  flex-wrap: wrap;
}

.filter-buttons .btn {
  padding: 8px 15px;
  font-size: 0.75rem;
}

.section-title-small {
  font-size: 1.25rem;
  margin-top: 0;
}

.colored-headers-cards {
  display: grid;
  grid-template-columns: repeat(3, minmax(220px, 1fr));
  max-width: 1200px;
  margin: 0 auto;
  gap: var(--card-gap);
}

.cards-grid.study-cards .card {
  border: none;
  border-radius: 20px 20px 0 0;
  border-bottom: var(--borderB) 1px solid;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.cards-grid.study-cards .card:hover {
  transform: translateY(-5px);
  box-shadow: 0 5px 8px rgba(210, 187, 113, 0.4);
  border-color: var(--accent);
}

.card-header-rounded {
  border-radius: 20px 20px 0 0;
  font-size: 2rem;
  padding: 20px;
  text-align: center;
}

.subscribe-form {
  display: flex;
  gap: 10px;
  margin-top: 20px;
  flex-wrap: wrap;
}

.subscribe-input {
  flex: 1;
  min-width: 250px;
  padding: 12px;
  border: 1px solid var(--border);
  border-radius: 5px;
  font-size: 0.875rem;
}

@media (max-width: 1024px) {
  .colored-headers-cards {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 768px) {
  .colored-headers-cards {
    grid-template-columns: 1fr;
  }

  .subscribe-form {
    flex-direction: column;
  }

  .subscribe-input {
    width: 100%;
  }
}
</style>
