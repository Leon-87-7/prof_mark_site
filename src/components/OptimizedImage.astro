---
import { Image } from 'astro:assets';

interface Props {
  src: ImageMetadata | string;
  alt: string;
  width?: number;
  height?: number;
  loading?: 'lazy' | 'eager';
  class?: string;
  quality?: number;
  format?: 'webp' | 'avif' | 'png' | 'jpg';
  sizes?: string;
}

const {
  src,
  alt,
  width,
  height,
  loading = 'lazy',
  class: className,
  quality = 80,
  format = 'webp',
  sizes,
  ...rest
} = Astro.props;

// If src is a string (external URL), use regular img tag
const isExternalImage = typeof src === 'string';
---

{isExternalImage ? (
  <img
    src={src}
    alt={alt}
    width={width}
    height={height}
    loading={loading}
    class={className}
    {...rest}
  />
) : (
  <Image
    src={src}
    alt={alt}
    width={width}
    height={height}
    loading={loading}
    class={className}
    quality={quality}
    format={format}
    sizes={sizes}
    {...rest}
  />
)}
